#!/usr/bin/env bash
#

# Useful functions (if you are in Bash under WSL)
#
function windowsFriendlyPWD()
{
    CURRENT_REALPATH="$(realpath .)"
    CURRENT_REALPATH="${CURRENT_REALPATH#/mnt}"

    echo ${CURRENT_REALPATH}
}

PROMPT_COMMAND="$PROMPT_COMMAND"' export PWinD=`windowsFriendlyPWD`;'

# Defining the default editor to use.
#
VISUAL="nano"
EDITOR="${VISUAL}"

# Useful exports (if you are in Bash under WSL)
#
export DOCKER_HOST="localhost:2375"
